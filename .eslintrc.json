{
    "env": {
        "browser": true,
        "node" : true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["warn", "double"],
        "no-console": "warn",
        "no-extra-parens": "error",
        "default-param-last": "error",
        "no-invalid-this": "error",
        "no-labels": "error",
        "no-undefined": "error",
        "spaced-comment": "error",
        "prefer-const": "error"
    }
}